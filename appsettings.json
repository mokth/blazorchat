{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "FileUpload": {
    "MaxFileSizeMB": 10,
    "AllowedExtensions": [
      ".jpg",
      ".jpeg",
      ".png",
      ".gif",
      ".pdf",
      ".doc",
      ".docx",
      ".txt",
      ".zip",
      ".mp3",
      ".wav",
      ".webm",
      ".ogg"
    ],
    "UploadPath": "wwwroot/uploads"
  },
  "SignalR": {
    "KeepAliveInterval": "00:00:15",
    "ClientTimeoutInterval": "00:00:30"
  },
  "CORS": {
    "AllowedOrigins": [
      "*"
    ],
    "Note": "For production, replace '*' with specific domain URLs like 'https://yourdomain.com'"
  }
}
