@using blazorchat.Models
@using blazorchat.Services
@inject IGroupService GroupService

@if (IsVisible)
{
    <div class="modal-overlay" @onclick="HandleOverlayClick">
        <div class="modal-dialog" @onclick:stopPropagation="true">
            <div class="modal-header">
                <h3>Create New Group</h3>
                <button class="close-btn" @onclick="OnCancel">âœ•</button>
            </div>

            <div class="modal-body">
                @if (!string.IsNullOrEmpty(errorMessage))
                {
                    <div class="alert alert-danger">@errorMessage</div>
                }

                <div class="form-group mb-3">
                    <label for="groupName">Group Name</label>
                    <input type="text" id="groupName" class="form-control" @bind="groupName" placeholder="Enter group name" />
                </div>

                <div class="form-group mb-3">
                    <label for="groupDescription">Description (optional)</label>
                    <textarea id="groupDescription" class="form-control" @bind="groupDescription" placeholder="Enter group description" rows="2"></textarea>
                </div>

                <div class="form-group mb-3">
                    <label>Select Members</label>
                    <div class="members-list">
                        @foreach (var user in AvailableUsers)
                        {
                            <div class="member-item">
                                <input type="checkbox" 
                                       id="user-@user.Id" 
                                       @onchange="@((e) => ToggleMember(user.Id, e))" />
                                <label for="user-@user.Id">
                                    <div class="user-avatar-small">
                                        @if (!string.IsNullOrEmpty(user.AvatarUrl))
                                        {
                                            <img src="@user.AvatarUrl" alt="@user.Name" />
                                        }
                                        else
                                        {
                                            @user.Name.Substring(0, 1).ToUpper()
                                        }
                                    </div>
                                    <span>@user.Name</span>
                                </label>
                            </div>
                        }
                    </div>
                </div>

                <div class="selected-count">
                    @selectedMemberIds.Count member(s) selected
                </div>
            </div>

            <div class="modal-footer">
                <button class="btn btn-secondary" @onclick="OnCancel">Cancel</button>
                <button class="btn btn-primary" @onclick="HandleCreateGroup" disabled="@isCreating">
                    @if (isCreating)
                    {
                        <span>Creating...</span>
                    }
                    else
                    {
                        <span>Create Group</span>
                    }
                </button>
            </div>
        </div>
    </div>
}

