    .text-muted {
        color: #999;
        font-size: 0.875rem;
    }

    .text-info {
        color: #17a2b8;
    }
</style>

@code {
    private ProfileModel profileModel = new ProfileModel();
    private User? currentUser;
    private string errorMessage = string.Empty;
    private string successMessage = string.Empty;
    private bool isSubmitting = false;
    private bool isAuthenticated = false;
    private bool isUploadingAvatar = false;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (!firstRender) return;

        try
        {
            var userIdResult = await SessionStorage.GetAsync<string>("userId");
            
            if (userIdResult.Success && !string.IsNullOrEmpty(userIdResult.Value))
            {
                isAuthenticated = true;
                currentUser = await AuthService.GetUserByIdAsync(userIdResult.Value);
                
                if (currentUser != null)
                {
                    profileModel.Name = currentUser.Name;
                    profileModel.AvatarUrl = currentUser.AvatarUrl;
                }
            }
            else
            {
                NavigationManager.NavigateTo("/login");
            }
        }
        catch
        {
            NavigationManager.NavigateTo("/login");
        }
        StateHasChanged();
    }

    private async Task HandleUpdateProfile()
    {
        errorMessage = string.Empty;
        successMessage = string.Empty;
        isSubmitting = true;

        try
        {
            if (currentUser != null)
            {
                var result = await AuthService.UpdateProfileAsync(currentUser.Id, profileModel.Name, profileModel.AvatarUrl);

                if (result)
                {
                    successMessage = "Profile updated successfully!";
                    // Update session storage
                    await SessionStorage.SetAsync("userName", profileModel.Name);
                    // Refresh current user
                    currentUser = await AuthService.GetUserByIdAsync(currentUser.Id);
                }
                else
                {
                    errorMessage = "Failed to update profile. Username may already be taken.";
                }
            }
        }
        catch (Exception ex)
        {
            errorMessage = "An error occurred while updating your profile.";
        }
        finally
        {
            isSubmitting = false;
        }
    }

    private async Task HandleAvatarUpload(InputFileChangeEventArgs e)
    {
        errorMessage = string.Empty;
        successMessage = string.Empty;
        isUploadingAvatar = true;

        try
        {
            var file = e.File;
            
            // Validate file type
            var allowedTypes = new[] { "image/jpeg", "image/jpg", "image/png" };
            if (!allowedTypes.Contains(file.ContentType.ToLower()))
            {
                errorMessage = "Only JPG and PNG images are allowed.";
                return;
            }

            // Validate file size (5MB max)
            const long maxSize = 5 * 1024 * 1024;
            if (file.Size > maxSize)
            {
                errorMessage = "Avatar image must be less than 5MB.";
                return;
            }

            // Read file as base64
            using var memoryStream = new MemoryStream();
            await file.OpenReadStream(maxSize).CopyToAsync(memoryStream);
            var base64Data = Convert.ToBase64String(memoryStream.ToArray());
            var dataUrl = $"data:{file.ContentType};base64,{base64Data}";

            // Upload file
            var fileUrl = await FileUploadService.SaveFileAsync(dataUrl, file.Name, MessageType.Image);
            
            // Update profile model
            profileModel.AvatarUrl = fileUrl;
            successMessage = "Avatar uploaded successfully! Click 'Update Profile' to save.";
        }
        catch (Exception ex)
        {
            errorMessage = $"Error uploading avatar: {ex.Message}";
        }
        finally
        {
            isUploadingAvatar = false;
        }
    }

    private class ProfileModel
    {
        [Required(ErrorMessage = "Username is required")]
        [StringLength(100, MinimumLength = 3, ErrorMessage = "Username must be between 3 and 100 characters")]
        public string Name { get; set; } = string.Empty;

        public string? AvatarUrl { get; set; }
    }
}
