@page "/profile"
@rendermode InteractiveServer
@using blazorchat.Services
@using blazorchat.Models
@using Microsoft.AspNetCore.Components.Server.ProtectedBrowserStorage
@using Microsoft.AspNetCore.Components.Forms
@inject IAuthService AuthService
@inject FileUploadService FileUploadService
@inject NavigationManager NavigationManager
@inject ProtectedSessionStorage SessionStorage

<PageTitle>Profile - BlazorChat</PageTitle>

<div class="profile-container">
    <div class="profile-card">
        <h2 class="text-center mb-4">My Profile</h2>
        
        @if (!isAuthenticated)
        {
            <div class="alert alert-warning">
                Please <a href="/login">login</a> to view your profile.
            </div>
        }
        else if (currentUser != null)
        {
            @if (!string.IsNullOrEmpty(errorMessage))
            {
                <div class="alert alert-danger">@errorMessage</div>
            }
            
            @if (!string.IsNullOrEmpty(successMessage))
            {
                <div class="alert alert-success">@successMessage</div>
            }

            <EditForm Model="@profileModel" OnValidSubmit="HandleUpdateProfile">
                <DataAnnotationsValidator />
                
                <div class="form-group mb-3">
                    <label for="name">Username</label>
                    <InputText id="name" class="form-control" @bind-Value="profileModel.Name" />
                    <ValidationMessage For="@(() => profileModel.Name)" />
                </div>

                <div class="form-group mb-3">
                    <label>Email</label>
                    <input type="text" class="form-control" value="@currentUser.Email" disabled />
                    <small class="text-muted">Email cannot be changed</small>
                </div>

                <div class="form-group mb-3">
                    <label for="avatarUpload">Avatar Image</label>
                    <InputFile id="avatarUpload" class="form-control" OnChange="HandleAvatarUpload" accept=".jpg,.jpeg,.png" />
                    <small class="text-muted">Upload JPG or PNG image (max 5MB)</small>
                    @if (isUploadingAvatar)
                    {
                        <div class="mt-2">
                            <span class="text-info">‚è≥ Uploading...</span>
                        </div>
                    }
                </div>

                @if (!string.IsNullOrEmpty(profileModel.AvatarUrl))
                {
                    <div class="avatar-preview mb-3">
                        <img src="@profileModel.AvatarUrl" alt="Avatar Preview" onerror="this.src='/images/default-avatar.svg'" />
                    </div>
                }
                else
                {
                    <div class="avatar-preview mb-3">
                        <div class="default-avatar">
                            @if (!string.IsNullOrEmpty(profileModel.Name))
                            {
                                @profileModel.Name.Substring(0, 1).ToUpper()
                            }
                        </div>
                    </div>
                }

                <button type="submit" class="btn btn-primary w-100 mb-3" disabled="@isSubmitting">
                    @if (isSubmitting)
                    {
                        <span>Updating...</span>
                    }
                    else
                    {
                        <span>Update Profile</span>
                    }
                </button>
            </EditForm>

            <hr />

            <div class="text-center mb-3">
                <a href="/change-password" class="btn btn-outline-primary">Change Password</a>
            </div>

            <div class="text-center">
                <a href="/chat" class="btn btn-link">Back to Chat</a>
            </div>
        }
    </div>
</div>

<style>
    .profile-container {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        padding: 20px;
    }

    .profile-card {
        background: white;
        border-radius: 10px;
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
        padding: 40px;
        max-width: 500px;
        width: 100%;
    }

    .form-group label {
        font-weight: 600;
        color: #333;
        margin-bottom: 8px;
        display: block;
    }

    .form-control {
        border-radius: 8px;
        border: 2px solid #e0e0e0;
        padding: 12px;
        transition: all 0.3s;
    }

    .form-control:focus {
        border-color: #667eea;
        box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.25);
    }

    .form-control:disabled {
        background-color: #f5f5f5;
    }

    .btn-primary {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border: none;
        border-radius: 8px;
        padding: 12px;
        font-weight: 600;
        transition: transform 0.2s;
    }

    .btn-primary:hover:not(:disabled) {
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(102, 126, 234, 0.4);
    }

    .btn-primary:disabled {
        opacity: 0.6;
        cursor: not-allowed;
    }

    .btn-outline-primary {
        border: 2px solid #667eea;
        color: #667eea;
        background: transparent;
        border-radius: 8px;
        padding: 10px 20px;
        font-weight: 600;
        transition: all 0.2s;
        text-decoration: none;
        display: inline-block;
    }

    .btn-outline-primary:hover {
        background: #667eea;
        color: white;
    }

    .btn-link {
        color: #667eea;
        text-decoration: none;
    }

    .btn-link:hover {
        text-decoration: underline;
    }

    h2 {
        color: #333;
        font-weight: 700;
    }

    a {
        color: #667eea;
        font-weight: 600;
    }

    .avatar-preview {
        text-align: center;
    }

    .avatar-preview img {
        max-width: 150px;
        max-height: 150px;
        border-radius: 50%;
        border: 3px solid #667eea;
    }

    .default-avatar {
        width: 150px;
        height: 150px;
        border-radius: 50%;
        background-color: #667eea;
        color: white;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        font-size: 3rem;
        font-weight: 600;
        border: 3px solid #667eea;
